@model ChangeViewModel
@{
}
<div class="container">
    <h1>Change RSVP</h1>
    <form class="rsvp-form" method="POST" asp-antiforgery="true">
        <input type="hidden" asp-for="UserId" readonly />
        <input type="hidden" asp-for="TempId" readonly />
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="form-input-group">
                    <i class="fa fa-user pre-form-fa"></i><input asp-for="Name" placeholder="Name" required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <label asp-for="NumberAdults"></label>
                <div class="form-input-group">
                    <i class="fa fa-user pre-form-fa"></i><input asp-for="NumberAdults" placeholder="Adults" required>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <label asp-for="NumberChildren"></label>
                <div class="form-input-group">
                    <i class="fa fa-users pre-form-fa"></i><input asp-for="NumberChildren" placeholder="Children"
                        required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="form-input-group">
                    <i class="fa fa-envelope pre-form-fa"></i><input asp-for="Email" placeholder="Email">
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="form-input-group">
                    <i class="fa fa-phone pre-form-fa"></i><input asp-for="PhoneNumber" placeholder="Phone number">
                </div>
            </div>
        </div>
        <div>
            <button class="btn btn-outline-secondary rsvp-btn">
                Update
            </button>
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#delete-modal">
                Delete
            </button>
        </div>
    </form>
</div>

<!-- Modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="delete-modal-title"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-modal-title">Are you sure you want to delete?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <p>This cannot be undone</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.UserId">Delete</a>
            </div>
        </div>
    </div>
</div>